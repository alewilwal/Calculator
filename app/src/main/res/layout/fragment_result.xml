    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.alexw.calculator.MainActivity"
    android:weightSum="4">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
